%html{:lang => I18n.locale, "xml:lang" => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:content => I18n.locale, :name => "language"}/
    %title= strip_tags([t(:title), content_for?(:title) ? yield(:title) : t(:slogan)].join(' :: '))
    = stylesheet_link_tag(:screen, :media => "screen, projection")
    = stylesheet_link_tag(:print, :media => :print)
    /[if lt IE 8]
      = stylesheet_link_tag(:ie, :media => "screen, projection")
    = javascript_include_tag(:defaults)
    = yield(:head)
    = csrf_meta_tag
  %body
    #content
      #header
        = yield(:title)
      #notification
        - flash.each do |type, message|
          %p.flash{:class => type.to_s}= message
      #main
        = yield
    .copyright= t(:copyright, :year => Time.now.year)

